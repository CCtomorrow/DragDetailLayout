<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/change_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换文字"/>

    <com.ai.dragdetaillayout.FitAvoidView
        android:id="@+id/fitAvoidView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:src="@drawable/gift"
        android:text="测试"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <com.ai.dragdetaillayout.PicsurroundView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/gift"
        android:drawableRight="@drawable/gift"
        android:padding="5dp"
        app:bottomText="是不是"
        app:bottomTextSize="20sp"
        app:topText="你好"
        app:topTextBold="true"
        app:topTextSize="20sp"/>

    <com.ai.dragdetaillayout.ZodiacsAfoulView
        android:id="@+id/zodiacsAfoulView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/gift"
        android:drawableRight="@drawable/gift"
        android:text="你好"
        android:textColor="#DF12"
        android:textSize="16sp"
        app:drawableMiddle="@mipmap/ic_launcher"/>

</LinearLayout>